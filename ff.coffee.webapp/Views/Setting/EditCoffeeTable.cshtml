@model ff.coffee.webapp.Models.CoffeeTableViewModels
<div class="panel panel-default">
    <div class="panel-body">
        @if (Model != null)
        {
            using (@Html.BeginForm("EditCoffeeTable", "Setting", null, FormMethod.Post, new { Class = "form-horizontal", id = "coffeeEdit", name = "coffeeEdit" }))
            {
                <h1>@SettingPageResource.SettingCoffeeTblEditHeader</h1>
                @Html.HiddenFor(m => m.Id, new { id = "coffeeID" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, SettingPageResource.SettingCoffeeTblNameLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { Class = "form-control", placeholder = SettingPageResource.SettingCoffeeTblNameLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Notes, SettingPageResource.SettingCoffeeTblNoteLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Notes, new { Class = "form-control", placeholder = SettingPageResource.SettingCoffeeTblNoteLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AreaId, SettingPageResource.SettingCoffeeTblEAreaLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.AreaId, new SelectList(Model.ListAreas, "ID", "Name"), new { Class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 submit-container">
                        <button type="submit" class="form-control btn btn-primary">@SettingPageResource.SettingSaveButton</button>
                    </div>
                    <div class="col-sm-4 submit-container">
                        <a href="#" class="form-control btn btn-danger" id="btnDeleteCoffeeTable">@SettingPageResource.SettingCoffeeTblDeleteButton</a>
                    </div>
                </div>
            }
        }
    </div>
</div>