@model ff.coffee.webapp.Models.SalePointViewModels
<div class="panel panel-default">
    <div class="panel-body">
        @if (Model != null)
        {
            using (@Html.BeginForm("EditSalePoint", "Setting", null, FormMethod.Post, new { Class = "form-horizontal", id = "saleEdit", name = "saleEdit" }))
            {
                <h1>@SettingPageResource.SettingSaleEditHeader</h1>
                @Html.HiddenFor(m => m.Id, new { id = "saleID" })
                @Html.HiddenFor(m => m.StartDate)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, SettingPageResource.SettingSaleNameLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { Class = "form-control", placeholder = SettingPageResource.SettingSaleNameLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address, SettingPageResource.SettingAddressLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Address, new { Class = "form-control", placeholder = SettingPageResource.SettingAddressLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, SettingPageResource.SettingPhoneLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Phone, new { Class = "form-control", placeholder = SettingPageResource.SettingPhoneLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Fax, SettingPageResource.SettingFaxLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Fax, new { Class = "form-control", placeholder = SettingPageResource.SettingFaxLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, SettingPageResource.SettingEmailLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { Class = "form-control", placeholder = SettingPageResource.SettingEmailLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Website, SettingPageResource.SettingWebsiteLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Website, new { Class = "form-control", placeholder = SettingPageResource.SettingWebsiteLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RestaurantId, SettingPageResource.SettingSaleRestLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.RestaurantId, new SelectList(Model.ListRestaurant, "ID", "Name"), new { Class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 submit-container">
                        <button type="submit" class="form-control btn btn-primary">@SettingPageResource.SettingSaveButton</button>
                    </div>
                    <div class="col-sm-4 submit-container">
                        <a href="#" class="form-control btn btn-danger" id="btnDelete">@SettingPageResource.SettingSaleDeleteButton</a>
                    </div>
                </div>
            }
        }
    </div>
</div>
