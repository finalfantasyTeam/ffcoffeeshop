@model ff.coffee.webapp.Models.AreasViewModels
<div class="panel panel-default">
    <div class="panel-body">
        @if (Model != null)
        {
            using (@Html.BeginForm("EditArea", "Setting", null, FormMethod.Post, new { Class = "form-horizontal", id = "areaEdit", name = "areaEdit" }))
            {
                <h1>@SettingPageResource.SettingAreaEditHeader</h1>
                @Html.HiddenFor(m => m.Id, new { id = "areaID" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, SettingPageResource.SettingAreaNameLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { Class = "form-control", placeholder = SettingPageResource.SettingAreaNameLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SalePointId, SettingPageResource.SettingAreaSaleLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.SalePointId, new SelectList(Model.ListSalePoint, "ID", "Name"), new { Class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 submit-container">
                        <button type="submit" class="form-control btn btn-primary">@SettingPageResource.SettingSaveButton</button>
                    </div>
                    <div class="col-sm-4 submit-container">
                        <a href="#" class="form-control btn btn-danger" id="btnDelete">@SettingPageResource.SettingAreaDeleteButton</a>
                    </div>
                </div>
            }
        }
    </div>
</div>