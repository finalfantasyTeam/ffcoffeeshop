@model ff.coffee.webapp.Models.ProductViewModels
<div class="panel panel-default">
    <div class="panel-body">
        @if (Model != null)
        {
            using (@Html.BeginForm("AddProduct", "Store", null, FormMethod.Post, new { Class = "form-horizontal", id = "productAdd", name = "productAdd" }))
            {
                <h1>@StorePageResource.ProductAddHeader</h1>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, StorePageResource.ProductNameLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { Class = "form-control", placeholder = StorePageResource.ProductNameLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Unit, StorePageResource.ProductUnitLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Unit, new { Class = "form-control", placeholder = StorePageResource.ProductUnitLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Price, StorePageResource.ProductPriceLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Price, new { Class = "form-control", placeholder = StorePageResource.ProductPriceLabel })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CategoryId, StorePageResource.ProductCatLabel, new { Class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.ListProductCat, "ID", "Name"), new { Class = "form-control", placeholder = StorePageResource.ProductCatLabel })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 submit-container">
                        <button type="submit" class="form-control btn btn-primary">@StorePageResource.StoreSaveButton</button>
                    </div>
                </div>
            }
        }
    </div>
</div>